<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#FCFCFC">

    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>

                    <solid android:color="@color/outLine"/>

                    <corners
                        android:radius="25dp" />

                    <padding
                        android:bottom="15dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="15dp" />

                </shape>
            </item>
            <item>

                <shape>

                    <stroke
                        android:width="2dp"
                        android:color="@color/outLine" />

<!--                    <solid android:color="@color/outLine" />-->

                    <corners android:radius="125dp" />

                    <padding
                        android:bottom="15dp"
                        android:left="25dp"
                        android:right="25dp"
                        android:top="15dp" />

                </shape>

            </item>
        </selector>


    </item>

</ripple>