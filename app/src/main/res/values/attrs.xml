<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedLetterView">
        <attr name="customTitle" format="string" />
        <attr name="customTitleSize" format="dimension" />
        <attr name="customTitleColor" format="color" />
        <attr name="customBackgroundColorValue" format="color" />
    </declare-styleable>

    <declare-styleable name="ProgressBackground">
        <attr name="progress_color" format="color" />
        <attr name="ripple_width" format="dimension"/>
        <attr name="rb_radius" format="dimension"/>
        <attr name="rb_duration" format="integer"/>
        <attr name="rb_rippleAmount" format="integer"/>
        <attr name="rb_scale" format="float"/>
        <attr name="rb_end_alpha" format="float"/>
        <attr name="rb_type" format="enum">
            <enum name="fillRipple" value="0"/>
            <enum name="strokeRipple" value="1"/>
        </attr>
        <attr name="rb_mode" format="enum">
            <enum name="start" value="1"/>
            <enum name="center" value="0"/>
            <enum name="end" value="-1"/>
        </attr>
    </declare-styleable>

</resources>